.tpl-block-banner
  background-position 0 0
  background-size cover
  background-repeat no-repeat

  font-size 30px
  font-weight 300
  line-height 1.15

  float: right
  width: 880px
  height: 280px;


  @media min
    display: none

  .tpl-block-admin
    float right

  > a
    display block
    text-decoration none
    width: 100%
    height: 280px;

  p
    margin: 0

  &-text
    theme(color 'white')
    theme(background 'accent-2')
    position relative
    top 14%
    width 52%
    min-height 68px
    padding 0.5em 1em

    strong, b
      font-weight 500
