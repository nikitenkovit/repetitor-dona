body > header
  padding-top: 20px
  line-height: 20px
  font-weight: 400
  margin-bottom: 20px
  position: relative
  z-index: 30
  clearfix();

  @media min
    line-height: lineHeight
    padding: 0
    height: 100%
    margin-bottom: 0

  .tpl-layout-page-center
    @media min
      display: none


  .tpl-block-navbar
    min-height: 30px;
    margin: 0 auto 40px auto;
    width: 1138px	

    .tpl-link-order-info, .tpl-block-auth
      float: left;      
      padding-left: 80px;
      position: relative;      

    .tpl-link-order-info
      left: 48%;

    .tpl-block-auth
      float: right;
      > div
        display: inline-block
        margin-left: 20px


  .tpl-block-logo-row
    clearfix()
    margin-bottom: 40px

  .tpl-block-logo
    float: left;
    margin-right: -100%;
    position: relative;
    padding-left: 0;
    width: 22%;
    margin-top: 8px
    img
      max-height: 67px
      max-width: 310px

  .tpl-block-phone
    float: left;
    margin-right: -100%;
    padding-left: 80px;
    position: relative;
    &-1
      left: 22%;
    &-2
      left: 48%;
    .tpl-value
      font-size: 24px;
      line-height: 40px;
      line-height: 40px
      @media screen and (min-width: 321px) and (max-width: 1185px)
        font-size: 22px
      @media screen and (min-width: 321px) and (max-width: 1100px)
        font-size: 20px
    .tpl-caption
      theme(color 'gray');
      font-style: italic;
      line-height: 15px;

  .tpl-block-cart
    float: right;    
    padding: 0 0 0 80px;
    position: relative;
    border: none
    height: 80px
    a
      text-decoration none

    .tpl-property-totals
      theme(color 'base')
    .tpl-cart-icon
      float: left
      margin-right: -100%
      position: relative
      left: -60px
      transition: opacity 0.2s
      @media screen and (min-width: 321px) and (max-width: 1100px)
        opacity: 0
    .tpl-cart-title
      display: block
      font-size: 24px
      line-height: 40px
      white-space: nowrap
      @media screen and (min-width: 321px) and (max-width: 1185px)
        font-size: 22px
      @media screen and (min-width: 321px) and (max-width: 1100px)
        font-size: 20px
    .tpl-cart-summary
      display: block
      theme(color 'gray')
      font-style: italic
      line-height: 15px

