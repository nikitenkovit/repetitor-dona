.tpl-link-pseudo
  theme(color 'accent-1')
  display: inline-block
  transition: color 0.2s, border 0.2s
  cursor: pointer
  &:hover
    theme(color 'accent-2') !important
  u
    color: inherit
    text-decoration: none
    border-bottom: 1px dotted
    transition: inherit
    line-height: 1em
    display: inline-block
    padding-right: 1px
  i:after
    transition: inherit
