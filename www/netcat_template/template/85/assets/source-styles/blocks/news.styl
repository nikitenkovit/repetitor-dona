.tpl-component-news
  h2
    theme(color 'accent-2')
    font-size: 25px
    font-weight: 600
    line-height: 30px
    @media min
      border-top: 1px solid darken(bgColor, 25%) // #BCBBC1
      padding: 50px 50px 0
      margin: 0 -50px
  > .tpl-link-more
    theme(color 'accent-2')
    float: right
    font-size: 14px
    font-weight: 400
    position: relative
    top: -40px
    &:hover
      theme(color 'base')
    @media min
      display: none

  .tpl-block-list-object
    margin-top: 20px
    @media min
      margin-top: 40px

    .tpl-property-date
      theme(color 'gray')
      text-transform: uppercase
      font-weight: 400
      line-height: 1.4

    .tpl-property-news-title
      display: block
      border-bottom: 5px solid // #F62733 -- not colorRed
      theme(border-color 'accent-2')
      font-size: 20px
      font-weight: 600
      text-transform: uppercase
      line-height: 1.2
      text-decoration: none
      theme(color 'base')
      padding-bottom: 10px
      margin: 5px 0 0
      &:hover
        theme(color 'accent-2')
      @media min
        font-size: 36px
        border-bottom-width: 10px
        padding-bottom: 20px
        margin-top: 15px

    .tpl-property-announce
      line-height: 1.3
      margin: 10px 0 0
      font-weight: 400
      @media min
        margin-top: 20px
        font-size: 24px
        font-weight: 300
        line-height: 1.8

    a.tpl-link-more
      font-weight: 400
      display: block
      margin-top: -10px
      theme(color 'accent-2')
      &:hover
        theme(color 'base')

.nc_comments .dashed
  A
    text-decoration: none
    border-bottom: 1px dashed #102889
    -moz-transition: border 0.2s, color 0.2s
    -webkit-transition: border 0.2s, color 0.2s
    transition: border 0.2s, color 0.2s

  A:hover
    border-bottom-color: #fd4c41