.tpl-block-content aside .tpl-block-menu-secondary-container
  min-height: 389px;
.tpl-block-content aside .tpl-block-menu-secondary
  position: relative
  width: 100%
  theme(background 'accent-1-darker')
  padding: 11px 0
  z-index: 8
  margin-bottom: 20px
  &:before
    position: absolute
    content: ''
    width: 0
    height: 0
    border-color: transparent
    theme(border-bottom-color 'accent-1-darker')
    border-style: solid
    border-width: 10px 13px
    bottom: 100%
    left: 20px
  @media min
    display: none
  > div
    theme(color 'white')
    font-size: 16px
    font-weight: 300
    line-height: 1.15
    > div
      padding-left: 20px
      font-size: 14px
  a
    theme(color 'white')
    text-decoration: none
    display: block
    padding: 9px 20px
    &:hover
      theme(color 'accent-2')
    &.tpl-state-current
      opacity: 0.6
      pointer-events: none


body > header .tpl-block-menu-secondary
  @extend .tpl-layout-page-center
  height: 0px

  @media min
    display: none

  .tpl-block-menu-secondary-item
    display: inline-block
    line-height: 1.3
    margin-left: 5%
    text-decoration: none
    vertical-align: middle
    font-weight: 300

    position: relative
    top: 165px

    &:first-child
      margin-left: 460px
    i
      display: inline-block
      float: left
      vertical-align: middle
    span
      display: inline-block
      margin-left: 15px
      overflow: hidden
      text-decoration: underline
      vertical-align: middle

