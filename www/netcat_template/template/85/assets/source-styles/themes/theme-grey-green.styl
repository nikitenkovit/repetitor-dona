    .tpl-block-prevnext
        border-radius 7px
        overflow      hidden

        > .tpl-link-next
            margin-left 1px !important
        > *
            border      none !important
            line-height 30px !important
            background  theme-image($thm, 'bg-green-striped.png') repeat-x !important
            color       #FFF !important

            &:hover
                opacity      .8 !important
                color        #FFF !important

    //-------------------------------------------------------------------------
    // New goods
    //-------------------------------------------------------------------------

    .tpl-block-goods-new
        .tpl-block-list-object
            article
                border-radius 7px
                background    #fff
                border-color  #268c59
                position      relative
                border-width  1px
                box-shadow    0 1px 3px #0003
                margin-bottom 5px
