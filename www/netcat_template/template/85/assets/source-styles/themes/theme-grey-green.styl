    //-------------------------------------------------------------------------

    .tpl-block-goods-offers
    .tpl-component-goods
    .tpl-block-list-objects
    .tpl-widget-netshop-viewed-by-user
    .tpl-widget-netshop-accessories
    .tpl-widget-netshop-compare
    .tpl-widget-netshop-favorite
    .tpl-block-goods-viewed-now
        .tpl-block-swiper
            h2
                color #9e7985
        .tpl-block-list-objects
            article
                border-radius 7px
                background    #fff
                border-color  transparent
                position      relative
                border-width  1px
                margin 1px 1px 5px
                box-shadow    0 1px 5px #0003, 0 0 0 1px #0001

        // [<] [>]
        .tpl-block-prevnext > *
                border     none !important
                line-height 30px !important
                background theme-image($thm, "bg-tabs.png") repeat-x 0 100% !important
