    .tpl-block-tabs.tpl-block-tabs--footer
        .tpl-block-tabs-switcher
            border-color #9e7a85 !important
            &:after
                content       ''
                position      relative
                margin-bottom -5px
                width         100%
                height        1px
                background    #83656f
                z-index       3
        .tpl-block-tabs-tab
            background none
            &.tpl-state-current
                background theme-image($thm, "bg-tabs.png") repeat-x 0 0 !important
                border-radius 7px 7px 0 0
                &:hover
                    color #FFF

        h3
            margin 0 !important
            padding 0 !important

        .tpl-block-list-object h3
