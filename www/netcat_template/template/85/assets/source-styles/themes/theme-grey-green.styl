        background    theme-image($thm, 'bg-green-striped.png') repeat-x !important
        color         #FFF !important
        border-radius 5px
        &:hover
            opacity 0.8

    //--------------------------------------------------------------------------

    // Иконки
    .tpl-link-compare-add:before
    .tpl-link-compare-remove:before
        background theme-image($thm, 'icon-compare.png') no-repeat 50% 50% !important
        width 17px !important
        height 23px !important
    .tpl-link-favorite-add:before
    .tpl-link-favorite-remove:before
        background theme-image($thm, 'icon-favorite.png') no-repeat 50% 50% !important
        width 20px !important
        height 23px !important
    .tpl-link-cart-add:before
        background theme-image($thm, 'icon-cart-green.png') no-repeat 50% 50% !important
        width 26px !important
        height 27px !important
    .tpl-variable-part .tpl-link-cart-add
        background theme-image($thm, "bg-tabs.png") repeat-x 0 0 !important
        border-radius 5px
        &:before
            background theme-image($thm, "icon-cart-white.png") no-repeat !important
            width 23px !important
            height 23px !important
            vertical-align top

    //-------------------------------------------------------------------------

    // Фон сравнения
    .tpl-block-tabs--footer
        .tpl-block-tabs-wrapper
            background theme-image($thm, 'bg-noice-dark.png')


    //-------------------------------------------------------------------------
