$thm = 'grey-green'

.tpl-theme-grey-green

    body
        background theme-image($thm, "bg-noice-grey.png")

    //-------------------------------------------------------------------------
    // header
    //-------------------------------------------------------------------------
    body > header

        background theme-image($thm, "bg-noice-white.png")

        // Navbar
        .tpl-block-navbar
            margin-top  -20px
            height      50px
            padding-top 14px

            a
                color #fff
                text-decoration none
                underline(#FFF7)

            // login link
            .tpl-link-login a
                color #FFF
                dashed-underline(#FFF)

            &:after
                content    ''
                position   absolute
                width      100%
                height     50px
                background  theme-image($thm, 'bg-green-striped.png') repeat-x
                top        0
                right      0
                z-index    -1


        // Cart
        .icon-cart-blue
            background theme-image($thm, "icon-cart-green.png") 50% 50% no-repeat
            font-weight bold
        .tpl-link-cart:hover
            color #268c59


        // Menu
        .tpl-block-menu
            // border-width 3px
            // border-color #98888D
            position relative

            &:after
                position   absolute
                content    ''
                width      100%
                height     2px
                background #98888D
                bottom     -5px
                left       0
                z-index    3

        // Search
        .tpl-block-search
            form
                border-radius 7px
                // padding 4px 1px 5px
                background theme-image($thm, "bg-gradient-beight.png") repeat-x 0 100% !important
        .tpl-block-search-query
            input
                color #000 !important
                border-radius 5px
                box-shadow 0 -1px 0 #0003
            input:placeholder
            input:-moz-placeholder
            input::-webkit-input-placeholder
                color #777
            button
                opacity 1 !important
                &:hover
                    background none
                    opacity 0.5
                .icon-search
                    margin-top -3px
                    background theme-image($thm, "icon-search.png") no-repeat
                    width 21px
                    height 21px
                    opacity 1
                    &:before
                        content ''

    //-------------------------------------------------------------------------
    // Sidebar menu
    //-------------------------------------------------------------------------

    aside .tpl-block-menu-secondary
        border-radius 7px

        // hide default arrow
        &:before
            display none !important

        // custom arrow
        &:after
            content     ''
            background  theme-image($thm, "bg-sidebar-arrow.png") no-repeat 0 0
            width       31px
            height      11px
            position    absolute
            top         -11px
            left        35px
            margin-left -15px

        // active element
        a:hover
                cursor pointer
                color #FFF !important
                background-color #9E7985

    //-------------------------------------------------------------------------
    // Hero banner
    //-------------------------------------------------------------------------

    .tpl-block-hero
        .tpl-block-hero-item a:before
            content    ''
            position   absolute
            left       260px
            top        0
            right      21px
            //         height 100%
            bottom     30px
            background #FFF
            background linear-gradient(left, #FFF0 0%, #FFFF 40%, #FFFF 100%)
        .s-circle
            background none
        .s-info
            text-align left
            top        160px
            left       280px

            &,*
                color #000
        .s-product
            right 20px

    //--------------------------------------------------------------------------
    // Баннер
    //--------------------------------------------------------------------------
    .tpl-block-banner
        border-radius 7px

        a
            border        1px solid #268c59
            border-radius 7px
            margin        10px 0 -10px -10px
            position      relative

            .tpl-block-banner-text
                background    #268c59
                position      absolute
                top           auto
                bottom        0
                left          0
                border-radius 0 0 0 5px


    //-------------------------------------------------------------------------
    // Modal
