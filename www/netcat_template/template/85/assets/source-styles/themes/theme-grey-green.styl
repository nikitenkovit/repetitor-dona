    //-------------------------------------------------------------------------
    // Form
    //-------------------------------------------------------------------------

    .tpl-block-main.tpl-component-order input[type=text]
    .tpl-block-main.tpl-component-order input[type=number]
    .tpl-block-main.tpl-component-order input[type=email]
    .tpl-block-main.tpl-component-order textarea
        background    #f6f5f3
        border-radius 5px
        box-shadow    inset 0 1px 0 #9e7985
    .tpl-block-auth-form
        input
            background    #f6f5f3
            border-radius 5px
            box-shadow    inset 0 1px 0 #9e7985

    .tpl-block-cart-actions
    .tpl-block-auth-form-actions
        button
        a
            border-radius 5px
            color #FFF
    button[type="submit"]
        border-radius 5px

    //-------------------------------------------------------------------------
    // News
    //-------------------------------------------------------------------------

    .tpl-component-news
        h2
            color #000 !important
        > .tpl-link-more
            color #268c59 !important

        // Row
        .tpl-block-list-object
            // title
            .tpl-property-news-title
                // color        #C3C3C3
                border none
                padding-bottom 0
            .tpl-property-announce
                color #7a7e87
            // more link
            a.tpl-link-more
                color #268c59 !important

    //-------------------------------------------------------------------------
