        .icon-bluecheck
            background-image url('../i/inline/icon-purplecheck.png')
        .icon-bluetruck
            background-image url('../i/inline/icon-purpletruck.png')
        .icon-bluecards
            background-image url('../i/inline/icon-purplecards.png')
        .icon-bluepin
            background-image url('../i/inline/icon-purplepin.png')

