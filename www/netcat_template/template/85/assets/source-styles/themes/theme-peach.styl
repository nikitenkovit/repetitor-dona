        .tpl-cart-summary
            font-style normal

    //-------------------------------------------------------------------------
    // Hero banner
    //-------------------------------------------------------------------------

    .tpl-block-hero
        .s-circle
            background none
        .s-info
            text-align left
            top        160px
            left       280px

            p
                color #000 !important
        .s-cost
            color #fb936f !important
            font-size 90px

        Controls
        .tpl-block-prevnext > *
            background #000 !important
            opacity 0.9
            &:hover
                opacity 1

    //-------------------------------------------------------------------------
    // News
    //-------------------------------------------------------------------------

    .tpl-component-news
        h2
            color #ca58be

        > .tpl-link-more
            color #ca58be
        // Row
        .tpl-block-list-object
            // title
            .tpl-property-news-title
                // color        #000
                border-color #ca58be // news row border
            // more link
            a.tpl-link-more
                color #ca58be

    //-------------------------------------------------------------------------
    // [<] [>]
    //-------------------------------------------------------------------------
    .tpl-block-prevnext > *
        opacity .7

        &:hover
            opacity      1 !important
            color        #fe8a62 !important
            border-color #fe8a62 !important


    //-------------------------------------------------------------------------
    // New goods
    //-------------------------------------------------------------------------

    .tpl-block-goods-new

        h2
            color #FE8A62
        .tpl-block-list-object
            article
                position relative
                &:before
                    content    ''
                    position   absolute
                    left       10px
                    top        10px
                    width      95px
                    height     110px
                    background #FFF
                // Star
                .tpl-block-rating-item *
                    color #fe8a62 !important

    //-------------------------------------------------------------------------
    // Сейчас смотрят / аксессуары
    //-------------------------------------------------------------------------

    .tpl-widget-netshop-accessories
    .tpl-block-goods-viewed-now

        article

            // Cart icon
            .tpl-link-cart-add:before
                background-image url("../i/inline/icon-cart-peach.png") !important

    //-------------------------------------------------------------------------

    // Buy btn
    .tpl-link-cart-add-and-checkout
        background #e1e6ea !important
        color      #000 !important

    //-------------------------------------------------------------------------
    // Footer
    //-------------------------------------------------------------------------

    footer
        background #fff

        input
            background #EEE !important

    //-------------------------------------------------------------------------
    // Иконки над товаром
